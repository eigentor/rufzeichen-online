  return [
    'access ruf test page' => [
      'title' => t('Access Ruf Test Page'),
      'description' => t('The Ruf Test page'),
    ]
  ];
}

function ruf_test_menu() {
  $items['ruf/default'] = array(
    'title' => 'Overview page',
    'page callback' => 'ruf_test_intro',
    'access callback' => TRUE,
    'expanded' => TRUE,
  );
  $items['holdmybeer'] = array(
    'title' => 'Beer Form',
    'description' => 'Get a beer',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('simple_form'),
    'access callback' => TRUE,
  );
  $items['wherewego'] = array(
    'title' => 'Why not',
    'description' => 'Test my form',
    'page_callback' => 'drupal_get_form',
    'page_arguments' => array('simple_form'),
    'access callback' => TRUE,
  );
  $items['mycustom-form'] = array(
    'title' => 'My Custom Form',
    'description' => 'My first custom form',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('mycustom_form'),
    'access callback' => TRUE,
  );
