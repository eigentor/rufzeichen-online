function ruf_create_node($title, &$context) {

  // create the node
  global $user;
  $node = new stdClass();
  $node->type = 'page';
  $node->title = $title;
  node_object_prepare($node);
  $node->uid = $user->uid;
  $node->status = 1;
  $node = node_submit($node);
  node_save($node);
}

