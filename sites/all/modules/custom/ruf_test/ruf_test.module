<?php

/**
 * Implements hook_permission().
 */
function ruf_test_permission() {
  return [
    'access ruf test page' => [
      'title' => t('Access Ruf Test Page'),
      'description' => t('The Ruf Test page'),
    ]
  ];
}

function ruf_test_menu() {
  $items['ruf/default'] = array(
    'title' => 'Overview page',
    'page callback' => 'ruf_test_intro',
    'access callback' => TRUE,
    'expanded' => TRUE,
  );
  $items['wherewego'] = array(
    'title' => 'Why not',
    'description' => 'Test my form',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('simple_form'),
    'access callback' => TRUE,
  );
  return $items;
}


function simple_form($form, &$form_state) {
  $form['description'] = [
    '#type' => 'item',
    '#title' => t('Vibecession biodiesel lomo listicle. Big mood sustainable poutine truffaut, hexagon crucifix selfies synth praxis '),
  ];
  $form['information'] = [
    '#type' => 'textfield',
    '#title' => 'Here we go',
  ];
  $form['submit'] = [
    '#type' => 'submit',
    '#value' => t('Submit'),
  ];

  return $form;
}


function ruf_test_intro() {
  $markup = t('Ein bisschen Text, damit man was sieht.');
  return array('#markup' => $markup);
}
